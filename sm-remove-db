#!/usr/bin/bash
#
# Remove a MySQL/PostgreSQL database for a SmartMachine.
# Copyright (c) 2013 Joyent Inc., All rights reserved.

usage() {
cat << EOF

Usage: $0 [options] TYPE DATABASE

Arguments:
    
    TYPE             Type of database: mysql or postgresql.
    DATABASE         Name of database you want to remove.

Options:
    
    -u               Username to access database.  [use portal credentials]
    -p               Password to access database.  [use portal credentials] 

EOF
exit 2;
}

while getopts "u:p:" OPTION; do
	case $OPTION in
		u)
			DB_USER=$OPTARG;
			;;
		p)
			DB_PASS=$OPTARG;
			;;
		*)
			usage;
			;;
	esac
done

shift $(($OPTIND - 1))
if [[ $# = 2 ]]; then
	DB_TYPE=$1;
	DB_NAME=$2;
else
	usage;
fi

export LANG=C
PATH="/opt/local/bin:/opt/local/gnu/bin:/opt/local/sbin:/usr/bin:/usr/sbin";

remove_mysqldb() {
	hash mysql &>/dev/null
	[[ $? -eq 1 ]] && echo "* ERROR - mysql was not found in your PATH." && exit 2;

        [[ ! `pgrep mysqld` ]] && echo "* ERROR - mysql must be running to list the databases." && exit 2;

        mysql -u${DB_USER} -p${DB_PASS} -e "select version();" > /dev/null 2>&1
        [[ $? -eq 1 ]] && echo "* ERROR - Can't connect with username password specified." && exit 2;

	mysql -u${DB_USER} -p${DB_PASS} -e "use ${DB_NAME};" > /dev/null 2>&1
	[[ $? -eq 1 ]] && echo "* ERROR - Database ${DB_NAME} doesn't exist." && exit 2;

	mysql -u${DB_USER} -p${DB_PASS} -e "drop database ${DB_NAME};" > /dev/null 2>&1
	[[ $? -eq 1 ]] && echo "* ERROR - There was an error removing your database." && exit 2;

	echo "* Removed MySQL database ${DB_NAME}.";
}
remove_postgresdb() {
	hash psql &>/dev/null
	[[ $? -eq 1 ]] && echo "* ERROR - psql was not found in your PATH." && exit 2;

	export PGPASSWORD=${DB_PASS};

        [[ ! `pgrep postgres` ]] && echo "* ERROR - postgresql must be running to list the databases." && exit 2;

        psql -U ${DB_USER} -c "select datname from pg_database;" > /dev/null 2>&1
        [[ $? > 0 ]] && echo "* ERROR - Can't connect with username password specified." && exit 2;

	[[ ! $(psql -U ${DB_USER} --list | egrep "\b${DB_NAME}\b") ]] && echo "* ERROR - Database ${DB_NAME} doesn't exist." && exit 2;

	psql -U ${DB_USER} -c "drop database ${DB_NAME};" > /dev/null 2>&1
	[[ $? > 0 ]] && echo "* ERROR - There was an error removing your database." && exit 2;

	echo "* Removed PostgreSQL database ${DB_NAME}.";
}

case $DB_TYPE in
	mysql)
		DB_USER=${DB_USER:-root};
		DB_PASS=${DB_PASS:-`mdata-get mysql_pw`};
		remove_mysqldb;
		;;
	postgresql)
		DB_USER=${DB_USER:-postgres};
		DB_PASS=${DB_PASS:-`mdata-get pgsql_pw`};
		remove_postgresdb;
		;;
	*)
		usage;
		;;
esac
